{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch via NPM script client:run",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "client:run",
          "debug"
        ],
        "port": 9229,
        "skipFiles": [
          "<node_internals>/**"
        ]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Launch via NPM script server:run",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "server:run",
          "debug"
        ],
        "port": 9239,
        "skipFiles": [
          "<node_internals>/**"
        ]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Launch via NPM script start",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "start",
          "debug"
        ],
        "port": 9249,
        "skipFiles": [
          "<node_internals>/**"
        ]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "nodemon script server.js",
        "runtimeExecutable": "nodemon",
        "program": "${workspaceFolder}/server.js",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": [
          "<node_internals>/**"
        ]
      },
      {
          "type": "chrome",
          "request": "launch",
          "name": "Launch Chrome against localhost port 4200",
          "url": "http://localhost:4200",
          "webRoot": "${workspaceFolder}"
      },
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome against localhost port 7790",
        "url": "http://localhost:7790",
        "webRoot": "${workspaceFolder}"
      },
      {
        "type": "chrome",
        "request": "attach",
        "name": "Attach to Chrome",
        "port": 9222,
        "webRoot": "${workspaceFolder}"
      },
      {
        "type": "edge",
        "request": "launch",
        "name": "Launch Microsoft Edge against localhost port 7790",
        "url": "http://localhost:7790",
        "webRoot": "${workspaceFolder}"
      },
      {
        "type": "edge",
        "version": "canary",
        "request": "launch",
        "name": "Launch Microsoft Chromium against localhost port 7790",
        "url": "http://localhost:7790",
        "webRoot": "${workspaceFolder}"
      },
      {
        "type": "firefox",
        "request": "launch",
        "name": "Launch Firefox against localhost port 7790",
        "url": "http://localhost:7790",
        "webRoot": "${workspaceFolder}"
      },
      {
        "type": "java",
        "name": "Debug (Attach) port 8080",
        "request": "attach",
        "hostName": "localhost",
        "port": 8080
      },
      {
        "type": "java",
        "name": "Debug (Launch) main class App.java",
        "request": "launch",
        "mainClass": "App.java"
      },
    ]
}
